<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.william.myapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".MainService">
            <intent-filter>
                <action android:name="com.example.william.myapplication.MainService" />
            </intent-filter>
        </service>

        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_text" />
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/forgot_password_text" />
        <activity android:name=".JobDetails" />
        <activity
            android:name=".JobSearchFilter"
            android:label="@string/title_activity_job_search_filter" />
        <activity android:name=".SelectState" />
        <activity android:name=".SelectCountry" />
        <activity android:name=".SelectPositionLevel" />
        <activity android:name=".SelectSpecAndRole" />
        <activity
            android:name=".UpdateWorkExperience"
            android:label="@string/title_activity_update_work_experience" />
        `
        <activity android:name=".SelectJobSpec" />
        <activity android:name=".SelectJobRole" />
        <activity
            android:name=".UpdateEducation"
            android:label="@string/title_activity_update_education" />
        <activity
            android:name=".UpdateJobPreference"
            android:label="@string/title_activity_update_job_preference" />
        <activity
            android:name=".UpdateJobSeeking"
            android:label="@string/title_activity_update_job_seeking" />
        <activity
            android:name=".UpdateResumeVisibility"
            android:label="@string/title_activity_update_resume_visibility" />
        <activity android:name=".SelectJobSeekingStatus" />
        <activity
            android:name=".UpdateSkill"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".UpdateAdditionalInfo"
            android:theme="@android:style/Theme.Dialog" />
        <activity android:name=".UpdateName" android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>
