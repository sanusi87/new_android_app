<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBorderBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="AppThemeSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">#D5D5D5</item>
    </style>

    <style name="AppThemePadding10">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppThemePadding5">
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppThemeBaseLabel">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeBaseLabelSub">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AppThemeBaseTextValue">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="AppThemeBaseTextInput">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeBaseButton">
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonStyle">?android:attr/buttonStyleSmall</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:shadowColor">#444444</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>
</resources>
