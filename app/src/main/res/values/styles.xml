<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeBorderBottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <style name="AppThemeSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:background">#D5D5D5</item>
    </style>

    <style name="AppThemePadding10">
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppThemePadding5">
        <item name="android:padding">5dp</item>
    </style>

    <style name="AppThemeBaseLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeBaseLabelSub">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="AppThemeBaseTextValue">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>
</resources>
