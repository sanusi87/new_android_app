<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppThemePadding10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/logo_image"
            android:src="@drawable/ic_portrait_black_48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/no_value"
            android:adjustViewBounds="false"
            android:maxHeight="200dp" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/registration_number"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/registrationNumber"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <View style="@style/AppThemeSeparator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/industry"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/companyIndustry"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View style="@style/AppThemeSeparator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/working_hours"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/companyWorkingHours"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View style="@style/AppThemeSeparator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/benefits"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/companyBenefits"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View style="@style/AppThemeSeparator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/website"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/companyWebsite"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <View style="@style/AppThemeSeparator" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebook_page"
                style="@style/AppThemeBaseLabel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_value"
                android:id="@+id/companyFacebookPage"
                style="@style/AppThemeBaseTextValue"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>