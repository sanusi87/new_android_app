<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:indeterminate="true"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/companyLogo"
                android:contentDescription="@string/company_logo"
                android:src="@drawable/ic_portrait_black_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    style="@style/AppThemeBaseLabel"
                    android:textColor="@color/blue"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/companyName" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/registration_number"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyRegistrationNumber"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/industry"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyIndustry"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/working_hours"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyWorkingHours"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/benefits"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyBenefits"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/website"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyWebsite"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/AppThemePadding5">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook_page"
                    style="@style/AppThemeBaseLabel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_value"
                    android:id="@+id/companyFacebookPage"
                    style="@style/AppThemeBaseLabelSub"
                    android:layout_marginLeft="8dp" />
            </LinearLayout>

            <View style="@style/AppThemeSeparator" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppThemePadding5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/worklocation"
                    style="@style/AppThemeBaseLabel" />

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar3"
                    android:indeterminate="true"
                    android:layout_gravity="center_horizontal" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_place_black_48dp"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/worklocation"
                    android:id="@+id/workLocationImage"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>